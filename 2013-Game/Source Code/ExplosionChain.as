package  {		import flash.display.Sprite;	import Explosion;	import ReusableCode.MyMaths;	import flash.events.Event;				public class ExplosionChain extends Sprite {				//vars		private var lifespan:int; //frames to live		private var birthrate:Number; //speed of which to spawn explosions		private var blastRadius:Number; //area of explosion		private var minBlastSize:int; //smallest size		private var maxBlastSize:int; //biggest size		private var birthCounter:Number=0;				public function ExplosionChain(l:int=20, b:Number=0.5, br:Number=20, minB:int=5, maxB:int=20) {			// constructor code			lifespan=l;			birthrate=b;			blastRadius=br;			minBlastSize=minB;			maxBlastSize=maxB;			addEventListener(Event.ENTER_FRAME, update)		}				public function update(e:Event) {			lifespan--;			if (lifespan>0) {				while (birthCounter>=0) {					birthCounter-=birthrate;					var ex = new Explosion(minBlastSize+(maxBlastSize-minBlastSize)*Math.random());					ex.rotation = Math.random()*360;					MyMaths.moveForward(ex, Math.random()*blastRadius);					addChild(ex);				}				birthCounter+=1;			} else if (numChildren==0) 				{					Sprite(parent).removeChild(this);					removeEventListener(Event.ENTER_FRAME, update)				}						}			}	}