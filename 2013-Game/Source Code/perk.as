package  {	import flash.display.Sprite;		public class perk extends Sprite {				//make some variable		protected var type:String;		protected var strength:Number;		protected var attribute:String;		protected var target:Object;		protected var lifespan:int;		protected var maxLifespan:int;				const BAR_WIDTH=100; //width of rectangle		const BAR_HEIGHT=15; //height of rectangle				public function perk(tar:Object, s:Number=1, a:String="bonusShots", t:String="MultiShot", l:int=100) {			// constructor code			type=t;			strength=s;			attribute=a;			target=tar;			lifespan=l;			maxLifespan=l;			perkName.text=t;//set the text to be the type of the perk			perkName.blendMode="invert";			//apply the perk to the target			target[attribute] += strength; //add strength to the targets attribute		}				//make another update function to manage lifespan		public function update() 		{			lifespan--;			//clear graphics			graphics.clear();			//draw a rectangle to represent the remaining time on perk			var fraction:Number = lifespan/maxLifespan; //between 0 and 1			graphics.beginFill(0x0099FF);			graphics.drawRect(0,0,fraction*BAR_WIDTH, BAR_HEIGHT);			graphics.endFill();			//if lifespan is over cancel perk			if (lifespan<=0)			{				target[attribute] -= strength; //reverse perk			}		}				public function dead():Boolean		{			if (lifespan<=0) return true;			return false;		}	}	}